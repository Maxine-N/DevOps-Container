{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "includePaths": ["Dockerfile"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["alpine"],
      "groupName": "base image"
    },
    {
      "matchPackageNames": ["ARG HELM_VERSION=(?<version>\\S+)"],
      "matchDatasources": "github-releases",
      "packageName": "helm/helm"
    },
    {
      "matchPackageNames": ["ARG KUBECTL_VERSION=v(?<version>\\S+)"],
      "matchDatasources": "github-releases",
      "packageName": "kubernetes/kubernetes"
    },
    {
      "matchPackageNames": ["ARG FLUX_VERSION=(?<version>\\S+)"],
      "matchDatasources": "github-releases",
      "packageName": "fluxcd/flux2"
    },
    {
      "matchPackageNames": ["ARG K9S_VERSION=(?<version>\\S+)"],
      "matchDatasources": "github-releases",
      "packageName": "derailed/k9s"
    },
    {
      "matchPackageNames": ["ARG TERRAFORM_VERSION=(?<version>\\S+)"],
      "matchDatasources": "github-releases",
      "packageName": "hashicorp/terraform"
    },
    {
      "matchPackageNames": ["ARG OPENTOFU_VERSION=(?<version>\\S+)"],
      "matchDatasources": "github-releases",
      "packageName": "opentofu/opentofu"
    }
  ]
}
