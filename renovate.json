{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "includePaths": ["Dockerfile"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["alpine"],
      "groupName": "base image"
    },
    {
      "matchPackagePatterns": ["ARG HELM_VERSION=(?<version>\\S+)"],
      "matchDatasources": ["github-releases"],
      "sourceUrl": "https://github.com/helm/helm"
    },
    {
      "matchPackagePatterns": ["ARG KUBECTL_VERSION=v(?<version>\\S+)"],
      "matchDatasources": ["github-releases"],
      "sourceUrl": "https://github.com/kubernetes/kubernetes"
    },
    {
      "matchPackagePatterns": ["ARG FLUX_VERSION=(?<version>\\S+)"],
      "matchDatasources": ["github-releases"],
      "sourceUrl": "https://github.com/fluxcd/flux2"
    },
    {
      "matchPackagePatterns": ["ARG K9S_VERSION=(?<version>\\S+)"],
      "matchDatasources": ["github-releases"],
      "sourceUrl": "https://github.com/derailed/k9s"
    },
    {
      "matchPackagePatterns": ["ARG TERRAFORM_VERSION=(?<version>\\S+)"],
      "matchDatasources": ["github-releases"],
      "sourceUrl": "https://github.com/hashicorp/terraform"
    },
    {
      "matchPackagePatterns": ["ARG OPENTOFU_VERSION=(?<version>\\S+)"],
      "matchDatasources": ["github-releases"],
      "sourceUrl": "https://github.com/opentofu/opentofu"
    }
  ]
}
